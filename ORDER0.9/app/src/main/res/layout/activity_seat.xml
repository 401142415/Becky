<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.order.SeatActivity" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup1"
        android:textColor="#000000" >
    </ListView>

    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:orientation="horizontal" >

        <RadioButton
            android1:id="@+id/radio0"
            android1:layout_width="80dp"
            android1:layout_height="30dp"
            android1:checked="true"
            android1:textColor="#ffffffff"
            android1:button="@null"  
            android1:background="@drawable/seat"
            android1:textSize="20dp"
            android1:text="  餐桌表" />

        <RadioButton
            android1:id="@+id/radio1"
            android1:layout_width="80dp"
            android1:layout_height="30dp"
            android1:button="@null"  
            android1:textSize="20dp"
            android1:textColor="#ffffffff"
            android1:background="@drawable/send"
            android1:text="  送餐表" />
        
    </RadioGroup>

</RelativeLayout>